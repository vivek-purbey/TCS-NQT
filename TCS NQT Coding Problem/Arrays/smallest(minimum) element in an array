// Method-1(Best Mehod):
#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cout<<"Please enter number of TestCases : ";
    cin>>t;
    while(t--){
        int n;
        cout<<"Please enter size of Array : ";
        cin>>n;
        int a[n];
        cout<<"Please enter the elements of Array : ";
        for(int i=0;i<n;i++){
            cin>>a[i];
        }
        sort(a,a+n);
        cout<<"Minimum Element in the this Array : "<<a[0]<<endl;
        cout<<endl;
    }
    return 0;
}
// Time Complexity = O(n*log(n) and Space Complexity=O(1).
