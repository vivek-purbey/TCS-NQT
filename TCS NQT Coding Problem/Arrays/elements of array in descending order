#include<bits/stdc++.h>
using namespace std;
int main(){
    cout<<"Please enter the size of Array : ";
    int n;
    cin>>n;
    cout<<"Please enter the elements of Array : ";
    int a[n];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    sort(a,a+n); //sorting in ascending order
    cout<<"Array in descending order : "<<endl;
    for(int i=n-1;i>=0;i--){
        cout<<a[i]<<" "; //reverse the sorted array.
    }
    cout<<endl;
    return 0;
}
